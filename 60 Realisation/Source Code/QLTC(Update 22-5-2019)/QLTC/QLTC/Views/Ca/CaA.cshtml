@model QLTC.Models.Notice
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Golden Flower</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/main.css" />
</head>


@{
    if ((QLTC.Models.Notice.logIn == false && QLTC.Models.Notice.adminLogIn == false) || (QLTC.Models.Notice.logIn == true && QLTC.Models.Notice.adminLogIn == false))
    {
        <script>
            alert("Bạn không có quyền truy cập trang web này")
            window.location = "/Home/Main"
        </script>
    }
    else
    {

        <body class="no-sidebar is-preload">
            <div id="page-wrapper">

                <!-- Header -->
                <section id="header" class="wrapper">

                    <!-- Logo -->
                    <div id="logo">
                        <h1><a href="#">THÊM CA</a></h1>
                    </div>

                    <!-- Nav -->
                    <nav id="nav">
                        <ul>
                            <li><a href="/Home/Main">Trang chủ</a></li>
                            <li><a href="/MonAn/MonAnM">Quản lý món ăn</a></li>
                            <li><a href="/DichVu/DichVuM">Quản lý dịch vụ</a></li>
                            <li><a href="/Ca/CaM">Quản lý ca</a></li>
                            <li><a href="/Sanh/SanhM">Quản lý sảnh</a></li>
                            <li><a href="/QuyDinh/QuyDinhM">Quản lý quy định</a></li>
                            <li><a href="/BaoCao/BaoCao">Lập báo cáo</a></li>
                        </ul>
                    </nav>
                </section>

                <!-- Main -->
                @if (ViewBag.Message != null)
                {
                    <script>
                 alert("@ViewBag.text");
                    </script>
                }
                <div id="main" class="wrapper style2">
                    <div class="container">
                        <div class="title">Welcome</div>
                        <!-- Content -->
                        <div id="content">
                            <article class="box post">
                                <header class="style1">
                                    <h2 id="titel">Thêm ca<br class="mobile-hide" /></h2>
                                </header>

                                <div class="row">

                                    <!-- Contact Form -->
                                    <section>
                                        <form id="form1" action="/Ca/CaM">
                                            <div class="row gtr-50">
                                                <div class="col-6 col-12-small">
                                                    <p id="shifttype">Tên ca: </p>
                                                    <input type="text" id="type1" name="type1" placeholder="Nhập vào tên ca:" onkeyup="return demtu()" required />
                                                </div>
                                                <br>
                                                <div class="col-12">
                                                    <ul class="actions">
                                                        <li><input type="submit" id="shiftsubmit" class="style1" value="Thêm" /></li>
                                                    </ul>
                                                </div>
                                            </div>

                                        </form>
                                    </section>

                                </div>



                            </article>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <section id="footer" class="wrapper">
                    <div class="title">Liên hệ</div>
                    <div class="container">
                        <header class="style1">
                            <h2>Liên hệ ngay với chúng tôi để được tư vấn thêm</h2>
                            <p>
                                Nếu có gì không hài lòng mong quý khách phản hồi theo thông tin phía dưới.<br />
                                Xin lỗi nếu làm quý khách phiền lòng.
                            </p>
                        </header>
                        <div class="row">
                            <div class="col-6 col-12-medium">

                                <!-- Contact Form -->
                                <section>
                                    <form method="post" action="#">
                                        <div class="row gtr-50">
                                            <div class="col-6 col-12-small">
                                                <input type="text" name="name" id="contact-name" placeholder="Name" />
                                            </div>
                                            <div class="col-6 col-12-small">
                                                <input type="text" name="email" id="contact-email" placeholder="Email" />
                                            </div>
                                            <div class="col-12">
                                                <textarea name="message" id="contact-message" placeholder="Message" rows="4"></textarea>
                                            </div>
                                            <div class="col-12">
                                                <ul class="actions">
                                                    <li><input type="submit" class="style1" value="Send" /></li>
                                                    <li><input type="reset" class="style2" value="Reset" /></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </form>
                                </section>

                            </div>
                            <div class="col-6 col-12-medium">

                                <!-- Contact -->
                                <section class="feature-list small">
                                    <div class="row">
                                        <div class="col-6 col-12-small">
                                            <section>
                                                <h3 class="icon fa-home">Địa chỉ</h3>
                                                <p>
                                                    56 Sư Vạn hạnh<br />
                                                    Quận 10, TP.HCM<br />
                                                </p>
                                            </section>
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <section>
                                                <h3 class="icon fa-comment">Cộng đồng</h3>
                                                <p>
                                                    <a href="#">facebook.com/goldenflower</a><br />
                                                </p>
                                            </section>
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <section>
                                                <h3 class="icon fa-envelope">Email</h3>
                                                <p>
                                                    <a href="#">baohua01234@gmail.com</a>
                                                </p>
                                            </section>
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <section>
                                                <h3 class="icon fa-phone">Điện thoại</h3>
                                                <p>
                                                    0908545151544
                                                </p>
                                            </section>
                                        </div>
                                    </div>
                                </section>

                            </div>
                        </div>
                        <div id="copyright">
                            <ul>
                                <li>&copy; Golden Flower</li>
                                <li>Design: <a href="">Nhom lap trinh web</a></li>
                            </ul>
                        </div>
                    </div>
                </section>
            </div>


            <!-- Scripts -->
            <script src="~/Scripts/jquery.min.js"></script>
            <script src="~/Scripts/jquery.dropotron.min.js"></script>
            <script src="~/Scripts/browser.min.js"></script>
            <script src="~/Scripts/breakpoints.min.js"></script>
            <script src="~/Scripts/util.js"></script>
            <script src="~/Scripts/main.js"></script>


            <script>
                $(function () {
                    $('#shiftsubmit').click(function () {

                        if (!$("#type1").val().length) {
                            alert('Tên ca không được để trống');
                            return false;
                        }
                        if ($("#type1").val().length > 5) {
                            alert("Tên ca tối đa 4 ký tự");
                            return false;
                        }

                        if (/^\d+$/.test($("#type1").val())) {
                            alert("Tên ca không được ghi chữ có số!");
                            return false;
                        }

                        var regex = /^[A-Za-z0-9 ]+$/;

                        if (!regex.test($("#type1").val())) {
                            alert("Tên ca không được có ký tự đặc biệt!");
                            return false;
                        }

                        else {
                            $.ajax({
                                type: "POST",
                                url: '@Url.Action("XacNhanThem", "Ca")',
                                dataType: "html",
                                contentType: "application/json; charset=utf-8",
                                data: JSON.stringify({
                                    tenca: $('#type1').val(),
                                }),
                                success:
                                    function (data) { }
                            });
                            alert('Ca được thêm thành công');
                        }

                    });
                });

            </script>


        </body>

    }

}



</html>

