@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Golden Flower</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/main.css" />
</head>
<body class="no-sidebar is-preload">
    <div id="page-wrapper">

        <!-- Header -->
        <section id="header" class="wrapper">

            <!-- Logo -->
            <div id="logo">
                <h1><a href="#">ĐĂNG KÝ</a></h1>
            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li><a href="/Home/Main">Trang chủ</a></li>
                    <li> <a href="/Home/SignIn">Đăng ký</a></li>
                    <li><a href="/Home/LogIn">Đăng nhập</a></li>
                </ul>
            </nav>

        </section>

        <!-- Main -->
        <div id="main" class="wrapper style2">
            <div class="container">

                <!-- Content -->
                <div id="content">
                    <article class="box post">
                        <header class="style1">
                            <h2>Thông tin cơ bản người dùng<br class="mobile-hide" /></h2>
                        </header>

                        <div class="row">

                            <!-- Contact Form -->
                            <section>
                                <form method="post" action="~/Home/SignIn">
                                    <div class="row gtr-50">
                                        <div class="col-6 col-12-small">
                                            <p>Nhập SDT: </p>
                                            <input type="text" name="sdt" id="sdt" placeholder="Số điện thoại" />
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <p>Nhập tên cô dâu: </p>
                                            <input type="text" name="tencodau" id="tencodau" placeholder="Tên cô dâu" />
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <p>Nhập tên chú rể: </p>
                                            <input type="text" name="tenchure" id="tenchure" placeholder="Tên chú rể" />
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <p>Mật khẩu: </p>
                                            <input type="password" name="matkhau" id="matkhau" placeholder="Mật khẩu" />
                                        </div>
                                        <br>
                                        <div class="col-12">
                                            <ul class="actions">
                                                <li><input type="submit" id="submit" class="style1" value="Đăng ký" /></li>
                                            </ul>
                                        </div>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </article>
                </div>
            </div>
        </div>

        @if (ViewBag.ExistAccount != null)
        {
            <script>
                alert("@ViewBag.ExistAccount");
            </script>
        }

        <!-- Footer -->
        <section id="footer" class="wrapper">
            <div class="title">Liên hệ</div>
            <div class="container">
                <header class="style1">
                    <h2>Liên hệ ngay với chúng tôi để được tư vấn thêm</h2>
                    <p>
                        Nếu có gì không hài lòng mong quý khách phản hồi theo thông tin phía dưới.<br />
                        Xin lỗi nếu làm quý khách phiền lòng.
                    </p>
                </header>
                <div class="row">
                    <div class="col-6 col-12-medium">

                        <!-- Contact Form -->
                        <section>
                            <form method="post" action="#">
                                <div class="row gtr-50">
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="name" id="contact-name" placeholder="Name" />
                                    </div>
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="email" id="contact-email" placeholder="Email" />
                                    </div>
                                    <div class="col-12">
                                        <textarea name="message" id="contact-message" placeholder="Message" rows="4"></textarea>
                                    </div>
                                    <div class="col-12">
                                        <ul class="actions">
                                            <li><input type="submit" class="style1" value="Send" /></li>
                                            <li><input type="reset" class="style2" value="Reset" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </section>

                    </div>
                    <div class="col-6 col-12-medium">

                        <!-- Contact -->
                        <section class="feature-list small">
                            <div class="row">
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-home">Địa chỉ</h3>
                                        <p>
                                            56 Sư Vạn hạnh<br />
                                            Quận 10, TP.HCM<br />
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-comment">Cộng đồng</h3>
                                        <p>
                                            <a href="#">facebook.com/goldenflower</a><br />
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-envelope">Email</h3>
                                        <p>
                                            <a href="#">baohua01234@gmail.com</a>
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-phone">Điện thoại</h3>
                                        <p>
                                            0908545151544
                                        </p>
                                    </section>
                                </div>
                            </div>
                        </section>

                    </div>
                </div>
                <div id="copyright">
                    <ul>
                        <li>&copy; Golden Flower</li>
                        <li>Design: <a href="">Nhom lap trinh web</a></li>
                    </ul>
                </div>
            </div>
        </section>

    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.dropotron.min.js"></script>
    <script src="~/Scripts/browser.min.js"></script>
    <script src="~/Scripts/breakpoints.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>

    <script>
        $(function () {
            $('#submit').click(function () {

                if (!$("#sdt").val().length) {
                    alert('Số điện thoại không được để trống');
                    return false;
                }

                if ($("#sdt").val().length > 11) {
                    alert('Số điện thoại không được lớn hơn 11 số');
                    return false;
                }


                if (/\D/.test($("#sdt").val())) {
                    alert("Số điện thoại không được ghi chữ, kí tự đặc biệt hoặc có dấu cách!");
                    return false;
                }

                if ($("#sdt").val() < 0) {
                    alert('Số điện thoại không được để âm!');
                    return false;
                }


                if (!$("#tencodau").val().length) {
                    alert('Tên cô dâu không được để trống');
                    return false;
                }


                if (!$("#tenchure").val().length) {
                    alert('Tên chú rể không được để trống');
                    return false;
                }


                if (/^\d+$/.test($("#tencodau").val())) {
                    alert("Tên cô dâu không được ghi chữ có số!");
                    return false;
                }


                if (/^\d+$/.test($("#tenchure").val())) {
                    alert("Tên chú rể không được ghi chữ có số!");
                    return false;
                }



                var regex = /^[A-Za-z0-9 ]+$/;

                if (!regex.test($("#tencodau").val())) {
                    alert("Tên cô dâu không được có ký tự đặc biệt!");
                    return false;
                }

                if (!regex.test($("#tenchure").val())) {
                    alert("Tên chú rể không được có ký tự đặc biệt!");
                    return false;
                }


                if (!$("#matkhau").val().length) {
                    alert('Mật khẩu không được để trống');
                    return false;
                }


                if (!regex.test($("#matkhau").val())) {
                    alert("Mật khẩu không được có ký tự đặc biệt!");
                    return false;
                }


                else {
                    alert("Đăng ký thành công!!!");
                }

            });
        });
    </script>


</body>
</html>
