                                        </div>
                                        <div class="col-6 col-12-small">
                                            <section>
                                                <h3 class="icon fa-envelope">Email</h3>
                                                <p>
                                                    <a href="#">baohua01234@gmail.com</a>
                                                </p>
                                            </section>
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <section>
                                                <h3 class="icon fa-phone">Điện thoại</h3>
                                                <p>
                                                    0908545151544
                                                </p>
                                            </section>
                                        </div>
                                    </div>
                                </section>

                            </div>
                        </div>
                        <div id="copyright">
                            <ul>
                                <li>&copy; Golden Flower</li>
                                <li>Design: <a href="">Nhom lap trinh web</a></li>
                            </ul>
                        </div>
                    </div>
                </section>

            </div>

            <!-- Scripts -->
            <script src="~/Scripts/jquery.min.js"></script>
            <script src="~/Scripts/jquery.dropotron.min.js"></script>
            <script src="~/Scripts/browser.min.js"></script>
            <script src="~/Scripts/breakpoints.min.js"></script>
            <script src="~/Scripts/util.js"></script>
            <script src="~/Scripts/main.js"></script>


            <script>
                $(function () {
                    $('#shiftsubmit').click(function () {
                        if (!$("#name").val().length) {
                            alert('Tên món ăn không được để trống');
                            return false;
                        }
                        if ($("#name").val().length > 50) {
                            alert("Tên món ăn không được vượt quá 50 ký tự");
                            return false;
                        }
                        if (/^\d+$/.test($("#name").val())) {
                            alert("Tên món ăn không được ghi chữ có số!");
                            return false;
                        }

                        var regex = /^[A-Za-z0-9 ]+$/;

                        if (!regex.test($("#name").val())) {
                            alert("Tên món ăn không được có ký tự đặc biệt!");
                            return false;
                        }

                        if (!$("#price").val().length) {
                            alert('Giá dịch vụ không được để trống');
                            return false;
                        }

                        if ($("#price").val() < 0) {
                            alert('Giá món ăn không được để âm!');
                            return false;
                        }

                        if (/\D/.test($("#price").val())) {
                            alert("Giá dịch vụ không được ghi chữ, kí tự đặc biệt hoặc có dấu cách!");
                            return false;
                        }

                        if (!regex.test($("#note").val())) {
                            alert("Ghi chú món ăn không được có ký tự đặc biệt!");
                            return false;
                        }
                        if (!$("#note").val().length) {
                            alert("Ghi chú món ăn không được để trống");
                            return false;
                        }
                        if ($("#note").val().length > 50) {
                            alert("Ghi chú món ăn không được vượt quá 50 ký tự");
                            return false;
                        }

                        else {
                            var STRMS = [];
                            $('input:checked').each(function () {
                                STRMS.push($(this).attr("value") + "*");
                            });
                            $.ajax({
                                type: "POST",
                                url: '@Url.Action("XacNhanSua", "MonAn")',
                                dataType: "html",
                                contentType: "application/json; charset=utf-8",
                                data: JSON.stringify({
                                    tenmon: $('#name').val(),
                                    gia: $('#price').val(),
                                    ghichu: $('#note').val()
                                }),
                                success:
                                    function (data) { }

                            });
                            alert('Cập nhật thành công!!');
                        }
                    });
                });
            </script>

        </body>
    }

}



</html>

