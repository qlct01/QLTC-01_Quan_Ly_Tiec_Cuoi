            </div>

            <!-- Scripts -->
            <script src="~/Scripts/jquery.min.js"></script>
            <script src="~/Scripts/jquery.dropotron.min.js"></script>
            <script src="~/Scripts/browser.min.js"></script>
            <script src="~/Scripts/breakpoints.min.js"></script>
            <script src="~/Scripts/util.js"></script>
            <script src="~/Scripts/main.js"></script>

            <script>
                $(function () {
                    $('#shiftsubmit').click(function () {
                        if (!$("#name1").val().length) {
                            alert('Tên dịch vụ không được để trống');
                            return false;
                        }

                        if ($("#name1").val().length > 50) {
                            alert("Tên dịch vụ không được nhiều hơn 50 ký tự");
                            return false;
                        }

                        if (/^\d+$/.test($("#name1").val())) {
                            alert("Tên dịch vụ không được ghi chữ có số!");
                            return false;
                        }

                        var regex = /^[A-Za-z0-9 ]+$/;

                        if (!regex.test($("#name1").val())) {
                            alert("Tên dịch vụ không được có ký tự đặc biệt!");
                            return false;
                        }

                        if (!$("#number1").val().length) {
                            alert('Số lượng dịch vụ không được để trống');
                            return false;
                        }

                        if (parseInt($("#number1").val()) > 100) {
                            alert("Số lượng của một dịch vụ không lớn hơn 100");
                            return false;
                        }

                        if (/\D/.test($("#number1").val())) {
                            alert("Số lượng dịch vụ không được ghi chữ, kí tự đặc biệt hoặc có dấu cách!");
                            return false;
                        }

                        if (!$("#price").val().length) {
                            alert('Giá dịch vụ không được để trống');
                            return false;
                        }

                        if (/\D/.test($("#price").val())) {
                            alert("Giá dịch vụ không được ghi chữ, kí tự đặc biệt hoặc có dấu cách!");
                            return false;
                        }

                        else {
                            $.ajax({
                                type: "POST",
                                url: '@Url.Action("XacNhanThem1", "DichVu")',
                                dataType: "html",
                                contentType: "application/json; charset=utf-8",
                                data: JSON.stringify({
                                    tendv: $('#name1').val(),
                                    soluong: $('#number1').val(),
                                    gia: $('#price').val()
                                }),
                                success:
                                    function (data) { }

                            });
                            alert('Thêm thành công!!');
                        }
                    });
                });
            </script>
        </body>

    }

