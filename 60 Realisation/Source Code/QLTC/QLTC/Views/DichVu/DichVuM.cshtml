@model QLTC.Models.ModelList
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Golden Flower</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/main.css" />

    <style>

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 16px;
        }

        th {
            font-size: 20px;
            font-weight: bold;
            color: black;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .margin {
            margin-left: 35px;
            margin-right: 35px;
        }
    </style>
</head>

@{
    if ((QLTC.Models.Notice.logIn == false && QLTC.Models.Notice.adminLogIn == false) || (QLTC.Models.Notice.logIn == true && QLTC.Models.Notice.adminLogIn == false))
    {
<script>
    alert("Bạn không có quyền truy cập trang web này")
    window.location = "/Home/Main"
</script>
    }
    else
    {
<body class="no-sidebar is-preload">
    <div id="page-wrapper">

        <!-- Header -->
        <section id="header" class="wrapper">

            <!-- Logo -->
            <div id="logo">
                <h1><a href="#">THÊM DỊCH VỤ</a></h1>
            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li><a href="/Home/Main">Trang chủ</a></li>
                    <li><a href="/MonAn/MonAnM">Quản lý món ăn</a></li>
                    <li><a href="/DichVu/DichVuM">Quản lý dịch vụ</a></li>
                    <li><a href="/Ca/CaM">Quản lý ca</a></li>
                    <li><a href="/Sanh/SanhM">Quản lý sảnh</a></li>
                    <li><a href="/QuyDinh/QuyDinhM">Quản lý quy định</a></li>
                    <li><a href="/BaoCao/BaoCao">Lập báo cáo</a></li>
                </ul>
            </nav>
        </section>

        <!-- Main -->
        @using (Html.BeginForm("ProcessForm", "DichVu", FormMethod.Post))
        {
        <div id="main" class="wrapper style2">
            <div style="overflow-x:auto;">
                <table>
                    <tr>
                        <th>Dịch vụ</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.dich_vuM)
                    {
                    <tr>
                        <td>@item.TenDV</td>
                        <td>@item.SoLuong</td>
                        <td>@item.Gia</td>
                        <td>
                            <input type="checkbox" value="@item.MaDV" />
                        </td>
                    </tr>
                    }

                </table>
            </div>
            <div align="center" style="margin-top: 50px" class="col-12">
                <ul class="actions">
                    <li><input type="submit" name="them" id="them" class="margin style2" value="Thêm" /></li>
                    <li><input type="submit" name="xoa" id="xoa" class="margin style1" value="Xóa" /></li>
                    <li><input type="submit" name="sua" id="sua" class="margin style2" value="Sửa" /></li>
                </ul>
            </div>
        </div>
        }



        <!-- Footer -->
        <section id="footer" class="wrapper">
            <div class="title">The Rest Of It</div>
            <div class="container">
                <header class="style1">
                    <h2>Ipsum sapien elementum portitor?</h2>
                    <p>
                        Sed turpis tortor, tincidunt sed ornare in metus porttitor mollis nunc in aliquet.<br />
                        Nam pharetra laoreet imperdiet volutpat etiam feugiat.
                    </p>
                </header>
                <div class="row">
                    <div class="col-6 col-12-medium">

                        <!-- Contact Form -->
                        <section>
                            <form action="#">
                                <div class="row gtr-50">
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="name" id="contact-name" placeholder="Name" />
                                    </div>
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="email" id="contact-email" placeholder="Email" />
                                    </div>
                                    <div class="col-12">
                                        <textarea name="message" id="contact-message" placeholder="Message" rows="4"></textarea>
                                    </div>
                                    <div class="col-12">
                                        <ul class="actions">
                                            <li><input type="submit" class="style1" value="Send" /></li>
                                            <li><input type="reset" class="style2" value="Reset" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </section>

                    </div>
                    <div class="col-6 col-12-medium">

                        <!-- Contact -->
                        <section class="feature-list small">
                            <div class="row">
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-home">Mailing Address</h3>
                                        <p>
                                            Untitled Corp<br />
                                            1234 Somewhere Rd<br />
                                            Nashville, TN 00000
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-comment">Social</h3>
                                        <p>
                                            <a href="#"></a><br />
                                            <a href="#">linkedin.com/untitled</a><br />
                                            <a href="#">facebook.com/untitled</a>
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-envelope">Email</h3>
                                        <p>
                                            <a href="#">info@untitled.tld</a>
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-phone">Phone</h3>
                                        <p>
                                            (000) 555-0000
                                        </p>
                                    </section>
                                </div>
                            </div>
                        </section>

                    </div>
                </div>
                <div id="copyright">
                    <ul>
                        <li>&copy; Untitled.</li>
                        <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
                    </ul>
                </div>
            </div>
        </section>

    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.dropotron.min.js"></script>
    <script src="~/Scripts/browser.min.js"></script>
    <script src="~/Scripts/breakpoints.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>


    <script>
        $(function () {
            $('#sua').click(function () {
                var STRMS = [];
                if (!$('input:checked').is(':checked')) {
                    alert('Vui lòng chọn bất kì dịch vụ nào để sửa!');
                    return false;
                }
                else {
                    $('input:checked').each(function () {
                        STRMS.push($(this).attr("value"));
                    });
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Sua", "DichVu")',
                        dataType: "html",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({
                            itemSelected: STRMS
                        }),
                        success:
                            function (data) { }

                    });
                }
            });
        });
    </script>

    <script>
        $(function () {
            $('#xoa').click(function () {
                var STRMS = [];
                if (!$('input:checked').is(':checked')) {
                    alert('Vui lòng chọn bất kì dịch vụ nào để xóa!');
                    return false;
                }
                else {
                    $('input:checked').each(function () {
                        STRMS.push($(this).attr("value"));
                        var check_delete = confirm('Bạn có muốn xóa dịch vụ này không?')
                        if (check_delete) {
                            $.ajax({
                                type: "POST",
                                url: '@Url.Action("Xoa", "DichVu")',
                                dataType: "html",
                                contentType: "application/json; charset=utf-8",
                                data: JSON.stringify({
                                    itemSelected1: STRMS
                                }),
                                success:
                                    function (data) { }

                            });
                            alert('Xóa thành công!!');
                            location.reload();
                        }
                    });
                }
            });
        });
    </script>
</body>

    }

}

</html>
