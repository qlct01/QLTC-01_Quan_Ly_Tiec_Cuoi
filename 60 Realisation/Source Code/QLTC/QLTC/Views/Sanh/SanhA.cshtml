                        </ul>
                    </nav>
                </section>

                <!-- Main -->
                <div id="main" class="wrapper style2">
                    <div class="container">
                        <!-- Content -->
                        <div id="content">
                            <article class="box post">

                                <div class="row">

                                    <!-- Contact Form -->
                                    <section>
                                        <form action="/Sanh/SanhM" id="sanhtiec">
                                            <div class="row gtr-50">
                                                <div class="col-6 col-12-small">
