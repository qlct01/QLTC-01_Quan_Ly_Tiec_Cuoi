                                                <p>
                                                    56 Sư Vạn hạnh<br />
                                                    Quận 10, TP.HCM<br />
                                                </p>
                                            </section>
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <section>
                                                <h3 class="icon fa-comment">Cộng đồng</h3>
                                                <p>
                                                    <a href="#">facebook.com/goldenflower</a><br />
                                                </p>
                                            </section>
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <section>
                                                <h3 class="icon fa-envelope">Email</h3>
                                                <p>
                                                    <a href="#">baohua01234@gmail.com</a>
                                                </p>
                                            </section>
                                        </div>
                                        <div class="col-6 col-12-small">
                                            <section>
                                                <h3 class="icon fa-phone">Điện thoại</h3>
                                                <p>
                                                    0908545151544
                                                </p>
                                            </section>
                                        </div>
                                    </div>
                                </section>

                            </div>
                        </div>
                        <div id="copyright">
                            <ul>
                                <li>&copy; Golden Flower</li>
                                <li>Design: <a href="">Nhom lap trinh web</a></li>
                            </ul>
                        </div>
                    </div>
                </section>

            </div>

            <!-- Scripts -->
            <script src="~/Scripts/jquery.min.js"></script>
            <script src="~/Scripts/jquery.dropotron.min.js"></script>
            <script src="~/Scripts/browser.min.js"></script>
            <script src="~/Scripts/breakpoints.min.js"></script>
            <script src="~/Scripts/util.js"></script>
            <script src="~/Scripts/main.js"></script>


            <script>
                $(function () {
                    $('#shiftsubmit').click(function () {
                        if (!$("#name").val().length) {
                            alert("Tên sảnh không được để trống");
                            return false;
                        }
                        if ($("#name").val().length > 50) {
                            alert("Tên sảnh không được vượt quá 50 ký tự");
                            return false;
                        }
                        if (/^\d+$/.test($("#name").val())) {
                            alert("Tên sảnh không được ghi chữ có số!");
                            return false;
                        }
                        var regex = /^[A-Za-z0-9 ]+$/;

                        if (!regex.test($("#name").val())) {
                            alert("Tên sảnh không được có ký tự đặc biệt!");
                            return false;
                        }


                        if (!$("#type").val().length) {
                            alert("Loại sảnh không được để trống ");
                            return false;
                        }
                        if ($("#type").val().length > 50) {
                            alert("Tên loại sảnh không được vượt quá 50 ký tự");
                            return false;
                        }
                        if (/^\d+$/.test($("#type").val())) {
                            alert("Loại sảnh không được ghi chữ có số!");
                            return false;
                        }
                        if (!regex.test($("#type").val())) {
                            alert("Loại sảnh không được có ký tự đặc biệt!");
                            return false;
                        }

                        if (!$("#ban").val().length) {
                            alert("Số lượng bàn tối đa không được để trống");
                            return false;
                        }
                        if (/\D/.test($("#ban").val())) {
                            alert("Số lượng bàn không được ghi chữ, kí tự đặc biệt hoặc có dấu cách!");
                            return false;
                        }
                        if ($("#ban").val() < 0) {
                            alert("Số lượng bàn tối đa không được để âm");
                            return false;
                        }
                        if ($("#ban").val() > 100) {
                            alert("Số lượng bàn tối đa không lớn hơn 100 bàn");
                            return false;
                        }

                        if (!$("#price").val().length) {
                            alert("Số lượng bàn tối thiểu không được để trống");
                            return false;
                        }
                        if (/\D/.test($("#price").val())) {
                            alert("Số lượng bàn không được ghi chữ, kí tự đặc biệt hoặc có dấu cách!");
                            return false;
                        }
                        if ($("#price").val() < 0) {
                            alert("Số lượng bàn tối thiểu không được để âm");
                            return false;
                        }
                        if ($("#price").val() >100) {
                            alert("Số lượng bàn tối thiểu không được lớn hơn 100");
                            return false;
                        }
                        if (parseInt($("#price").val()) > parseInt($("#ban").val())) {
                            alert("Số lượng bàn tối thiểu phải nhỏ hơn lượng bàn tối đa");
                            return false;
                        }
                        if (parseInt($("#price").val()) == parseInt($("#ban").val())) {
                            alert("Số lượng bàn tối thiểu không được bằng số lượng bàn tối đa");
                            return false;
                        }

                        else {
                            $.ajax({
                                type: "POST",
                                url: '@Url.Action("XacNhanThem", "Sanh")',
                                dataType: "html",
                                contentType: "application/json; charset=utf-8",

                                data: JSON.stringify({
                                    tensanh: $('#name').val(),
                                    loaisanh: $('#type').val(),
                                    soluongbantoida: $('#ban').val(),
                                    dongia: $('#price').val(),
                                    ghichu: $('#note').val()
                                }),
                                success:
                                    function (data) {}
                            });
                            alert("Thêm thành công");
                        }
                    });
                });
            </script>

        </body>
    }
}


</html>


