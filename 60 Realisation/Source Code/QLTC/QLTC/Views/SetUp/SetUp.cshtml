@model QLTC.Models.ModelList

@{
    Layout = null;
}



<!DOCTYPE HTML>
<html>
<head>
    <title>SetUp</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/main.css" />
</head>
<body class="no-sidebar is-preload">
    <div id="page-wrapper">

        <!-- Header -->
        <section id="header" class="wrapper">

            <!-- Logo -->
            <div id="logo">
                <h1><a href="#">ĐẶT TIỆC</a></h1>
                <p>Quý khách vui lòng lựa chọn các hình thức để sang bước tiếp theo</p>
            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li><a href="/Home/Main">Trang chủ</a></li>
                    <li><a href="/SetUp/SetUp">Đặt tiệc</a></li>
                    <li><a href="/TaiKhoan/TaiKhoan">Thông tin tài khoản</a></li>
                    <li><a href="/LichSu/LichSu">Lịch sử</a></li>
                </ul>
            </nav>
        </section>

        <!-- Main -->
        <form action="/SetUp/SetUpDetail" id="submit">
            <div id="main" class="wrapper style2">
                <div class="container">

                    <!-- Content -->
                    <div id="content">
                        <article class="box post">
                            <header class="style1">
                                <h2>Thông tin đặt tiệc cưới<br class="mobile-hide" /></h2>
                            </header>

                            <!-- Contact Form -->
                            <section>
                                <div class="dropdown">
                                    <input style="background-color:green" class="dropbtn" type="button" value="SẢNH" />
                                    @foreach (var item in Model.ds_sanhsM)
                                    {
                                        <div id="margin" class="w3-dropdown-hover">
                                            <font size="5">
                                                <input class="masanh" type="checkbox" value="@item.MaSanh" name="">
                                                @item.LoaiSanh
                                            </font>
                                            <div class="w3-dropdown-content w3-card-4" style="width:350px; background-color:antiquewhite">
                                                <div class="w3-container">
                                                    <p>Tên sảnh: @item.TenSanh</p>
                                                    <p>Loại sảnh: @item.LoaiSanh</p>
                                                    <p>Số lượng bàn tối đa: @item.SoLuongBanToiDa</p>
                                                    <p>Đơn giá bàn tối thiểu: @item.DonGiaBanToiThieu</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <br>
                                <br>

                                <h2 id="font"> List đặt món ăn </h2>
                                @foreach (var item in Model.mon_anM)
                                {
                                    <div id="font1" class="form-check">
                                        <input class="mamon" type="checkbox" value="@item.MaMon">
                                        <label id="element1" class="form-check-label" for="defaultCheck1">
                                            Món: @item.TenMon
                                        </label>
                                        <details id="element2">
                                            <summary>Thông tin chi tiết Món</summary>
                                            <p>Tên món: @item.TenMon</p>
                                            <p>Gía: @item.Gia</p>
                                        </details>
                                    </div>
                                }

                                <br>
                                <br>

                                <h2 id="font"> List đặt dịch vụ </h2>
                                @foreach (var item in Model.dich_vuM)
                                {
                                    <div id="font1" class="form-check">
                                        <input class="madv" type="checkbox" value="@item.MaDV">
                                        <label id="element1" class="form-check-label" for="defaultCheck2">
                                            Dịch vụ: @item.TenDV
                                        </label>
                                        <details id="element2">
                                            <summary>Thông tin chi tiết dịch vụ</summary>
                                            <p>Tên dịch vụ: @item.TenDV</p>
                                            <p>Gía: @item.Gia</p>
                                        </details>
                                    </div>
                                }


                                <br>
                                <br>


                            </section>
                        </article>
                    </div>
                    <br>
                    <br>
                    <div class="proccess">
                        <ul class="actions">
                            <li><input type="submit" class="style1" value="Tiến hành đặt" /></li>
                        </ul>
                    </div>
                </div>
            </div>
        </form>


        <!-- Footer -->
        <section id="footer" class="wrapper">
            <div class="title">Liên hệ</div>
            <div class="container">
                <header class="style1">
                    <h2>Liên hệ ngay với chúng tôi để được tư vấn thêm</h2>
                    <p>
                        Nếu có gì không hài lòng mong quý khách phản hồi theo thông tin phía dưới.<br />
                        Xin lỗi nếu làm quý khách phiền lòng.
                    </p>
                </header>
                <div class="row">
                    <div class="col-6 col-12-medium">

                        <!-- Contact Form -->
                        <section>
                            <form method="post" action="#">
                                <div class="row gtr-50">
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="name" id="contact-name" placeholder="Name" />
                                    </div>
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="email" id="contact-email" placeholder="Email" />
                                    </div>
                                    <div class="col-12">
                                        <textarea name="message" id="contact-message" placeholder="Message" rows="4"></textarea>
                                    </div>
                                    <div class="col-12">
                                        <ul class="actions">
                                            <li><input type="submit" class="style1" value="Send" /></li>
                                            <li><input type="reset" class="style2" value="Reset" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                    <div class="col-6 col-12-medium">

                        <!-- Contact -->
                        <section class="feature-list small">
                            <div class="row">
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-home">Địa chỉ</h3>
                                        <p>
                                            56 Sư Vạn hạnh<br />
                                            Quận 10, TP.HCM<br />
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-comment">Cộng đồng</h3>
                                        <p>
                                            <a href="#">facebook.com/goldenflower</a><br />
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-envelope">Email</h3>
                                        <p>
                                            <a href="#">baohua01234@gmail.com</a>
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-phone">Điện thoại</h3>
                                        <p>
                                            0908545151544
                                        </p>
                                    </section>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div id="copyright">
                    <ul>
                        <li>&copy; Golden Flower</li>
                        <li>Design: <a href="">Nhom lap trinh web</a></li>
                    </ul>
                </div>
            </div>
        </section>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.dropotron.min.js"></script>
    <script src="~/Scripts/browser.min.js"></script>
    <script src="~/Scripts/breakpoints.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>

    <script>
        $(function () {
            $('#submit').submit(function () {
                var dssanh = [];
                var dsmon = [];
                var dsdv = [];
                $('.masanh:checked').each(function () {
                    dssanh.push($(this).attr("value"));
                });
                $('.mamon:checked').each(function () {
                    dsmon.push($(this).attr("value"));
                });
                $('.madv:checked').each(function () {
                    dsdv.push($(this).attr("value"));
                });
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("SubmitSetUp", "SetUp")',
                    dataType: "html",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({ dssanh: dssanh, dsmon: dsmon, dsdv: dsdv }),
                    success:
                        function (data) { }

                });
        });
        });
    </script>




    <script>
        $("form").submit(function (e) {

            const checkBoxesSanh = document.querySelectorAll('.masanh:checked');
            const checkBoxesMon = document.querySelectorAll('.mamon:checked');
            const checkBoxesDV = document.querySelectorAll('.madv:checked');

            if (checkBoxesDV.length > 20) {
                alert('Bạn chỉ được chọn tối đa 20 dịch vụ');
                return false;
            }
            else if (!checkBoxesDV.length) {
                alert('Bạn phải chọn ít nhất 1 dịch vụ');
                return false;
            }


            if (checkBoxesMon.length > 100) {
                alert('Bạn chỉ được chọn tối đa 100 món');
                return false;
            }
            else if (!checkBoxesMon.length) {
                alert('Bạn phải chọn ít nhất 1 món');
                return false;
            }


            if (checkBoxesSanh.length > 1) {
                alert('Bạn chỉ được chọn 1 sảnh');
                return false;
            }
            else if (!checkBoxesSanh.length) {
                alert('Bạn phải chọn ít nhất 1 sảnh');
                return false;
            }
        });
    </script>
</body>
</html>
