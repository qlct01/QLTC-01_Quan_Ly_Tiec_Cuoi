@model QLTC.Models.ModelList

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>SetUpDetail</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/main.css" />
</head>
<body class="no-sidebar is-preload">
    <div id="page-wrapper">

        <!-- Header -->
        <section id="header" class="wrapper">

            <!-- Logo -->
            <div id="logo">
                <h1><a href="#">CHI TIẾT ĐẶT TIỆC</a></h1>
                <p>Quý khách vui lòng điền đầy đủ thông tin để tiến hành đặt tiệc</p>
            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li><a href="/Home/Main">Trang chủ</a></li>
                    <li><a href="/SetUp/SetUp">Đặt tiệc</a></li>
                    <li><a href="/TaiKhoan/TaiKhoan">Thông tin tài khoản</a></li>
                    <li><a href="/LichSu/LichSu">Lịch sử</a></li>
                </ul>
            </nav>
        </section>

        <!-- Main -->
        <div id="main" class="wrapper style2">
            <div class="container">

                <form id="submit" action="">
                    <!-- Content -->
                    <div id="content">
                        <article class="box post">
                            <div>
                                <!-- Contact Form -->
                                <section>
                                    <div>
                                        <div>
                                            <h4>Tiền Đặt Cọc: </h4>
                                            <input type="text" name="tiendatcoc" id="tiendatcoc" placeholder="Tiền đặt cọc" />
                                        </div>

                                        <div>
                                            <h4>Số lượng bàn</h4>
                                            <input id="soluongban" name="soluongban" type="text" placeholder="Số lượng bàn">
                                        </div>

                                        <div>
                                            <h4>Số bàn dự trữ: </h4>
                                            <input type="text" id="sobandutru" name="sobandutru" placeholder="Số bàn dự trữ" />
                                        </div>

                                        <div>
                                            <h4>Chọn ca: </h4>
                                            <select class="Ca">
                                                @foreach (var item in Model.caM)
                                                {
                                                    <option id="tenca" name="@item.TenCa" value="@item.MaCa">@item.TenCa</option>
                                                }
                                            </select>
                                        </div>

                                        <div>
                                            <h4>Ngày đặt: </h4>
                                            <div action="/action_page.php">
                                                <input style="margin-bottom: 20px; margin-top:10px" type="date" name="ngaydattiec" id="ngaydattiec">
                                            </div>
                                        </div>

                                        <div id="time">
                                            <h4>Giờ</h4>
                                            <input id="hour" name="hour" type="number" min="0" max="23">:
                                            <input id="minute" name="minute" type="number" min="0" max="59">
                                        </div>

                                        <br>
                                        <br>
                                        <br>

                                        <div>
                                            <label style="margin-left: 10px" id="element1" class="form-check-label" for="defaultCheck1">
                                                <font size="6">Nhập mã thẻ:</font>
                                            </label>
                                            <input type="text" id="mathe" />
                                        </div>


                                        <br>
                                        <br>
                                        <br>

                                        <div class="col-12">
                                            <ul class="actions">
                                                <li><input type="submit" class="style1" value="Thanh toán" formaction="/Home/Main"/></li>
                                            </ul>
                                        </div>

                                    </div>
                                </section>
                            </div>
                        </article>
                    </div>
                </form>
            </div>
        </div>
        <!-- Footer -->
        <section id="footer" class="wrapper">
            <div class="title">Liên hệ</div>
            <div class="container">
                <header class="style1">
                    <h2>Liên hệ ngay với chúng tôi để được tư vấn thêm</h2>
                    <p>
                        Nếu có gì không hài lòng mong quý khách phản hồi theo thông tin phía dưới.<br />
                        Xin lỗi nếu làm quý khách phiền lòng.
                    </p>
                </header>
                <div class="row">
                    <div class="col-6 col-12-medium">

                        <!-- Contact Form -->
                        <section>
                            <form method="post" action="#">
                                <div class="row gtr-50">
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="name" id="contact-name" placeholder="Name" />
                                    </div>
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="email" id="contact-email" placeholder="Email" />
                                    </div>
                                    <div class="col-12">
                                        <textarea name="message" id="contact-message" placeholder="Message" rows="4"></textarea>
                                    </div>
                                    <div class="col-12">
                                        <ul class="actions">
                                            <li><input type="submit" class="style1" value="Send" /></li>
                                            <li><input type="reset" class="style2" value="Reset" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                    <div class="col-6 col-12-medium">

                        <!-- Contact -->
                        <section class="feature-list small">
                            <div class="row">
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-home">Địa chỉ</h3>
                                        <p>
                                            56 Sư Vạn hạnh<br />
                                            Quận 10, TP.HCM<br />
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-comment">Cộng đồng</h3>
                                        <p>
                                            <a href="#">facebook.com/goldenflower</a><br />
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-envelope">Email</h3>
                                        <p>
                                            <a href="#">baohua01234@gmail.com</a>
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-phone">Điện thoại</h3>
                                        <p>
                                            0908545151544
                                        </p>
                                    </section>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div id="copyright">
                    <ul>
                        <li>&copy; Golden Flower</li>
                        <li>Design: <a href="">Nhom lap trinh web</a></li>
                    </ul>
                </div>
            </div>
        </section>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.dropotron.min.js"></script>
    <script src="~/Scripts/browser.min.js"></script>
    <script src="~/Scripts/breakpoints.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>

    <script>
        $(function () {
            $('#submit').submit(function () {
                var STRMS = [];
                $('input:checked').each(function () {
                    STRMS.push($(this).attr("value") + "*");
                });
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("SubmitSetUpDetail", "SetUp")',
                    dataType: "html",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({
                        tiendatcoc: $("#tiendatcoc").val(), sobandutru: $("#sobandutru").val(), ngaydattiec: $("#ngaydattiec").val(),
                        hour: $("#hour").val(), minute: $("#minute").val(), soluongban: $('#soluongban').val(), maca: $('option:selected').val(),
                        mathe: $('#mathe').val()
                    }),
                    success:
                        function (data) { }

                });
        });
        });
    </script>


    <script>
        $("form").submit(function (e) {

            var sld = parseInt($("#sobandutru").val());
            var slb = parseInt($("#soluongban").val());

            if (!$("#tiendatcoc").val().length) {
                alert('Tiền đặt cọc không được để trống');
                return false;
            }

            if (!$("#soluongban").val().length) {
                alert('Số lượng bàn không được để trống');
                return false;
            }

            if (!$("#sobandutru").val().length) {
                alert('Số bàn dự trữ không được để trống');
                return false;
            }

            if (!$("#ngaydattiec").val().length) {
                alert('Ngày đặt tiệc không được để trống');
                return false;
            }

            if ($("#minute").val().length == "") {
                alert('Giờ không được để trống');
                return false;
            }

            if ($("#hour").val().length == "") {
                alert('Giờ không được để trống');
                return false;
            }

            if (!$("#mathe").val().length) {
                alert('Mã thẻ không được để trống');
                return false;
            }


            //if ($('option:selected').val() == "1") {
            //    if ($("#hour").val() < 8 || $("#hour").val() > 12) {

            //        alert('Không được đặt giờ khác giờ của ca sáng');
            //        return false;
            //    }
            //}

            if ($('option:selected').val() == "1") {
                if ($("#hour").val() < 11 || $("#hour").val() > 15) {

                    alert('Không được đặt giờ khác giờ của ca trưa');
                    return false;
                }
            }

            //else if ($('option:selected').val() == "3") {
            //    if ($("#hour").val() < 14 || $("#hour").val() > 18) {

            //        alert('Không được đặt giờ khác giờ của ca chiều');
            //        return false;
            //    }
            //}

            else if ($('option:selected').val() == "2") {
                if ($("#hour").val() < 17 || $("#hour").val() > 21) {

                    alert('Không được đặt giờ khác giờ của ca tối');
                    return false;
                }
            }



            if (sld + slb > @QLTC.Models.SetUpAction.soLuongBanToiDa) {
                alert("Số lượng bàn và số bàn dự trữ không được vượt quá số lượng bàn tối đa của sảnh");
                $("#soluongban").val("");
                $("#sobandutru").val("");
                return false;

            }
        });
        
    </script>

</body>
</html>
