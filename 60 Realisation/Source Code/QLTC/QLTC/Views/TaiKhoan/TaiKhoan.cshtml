@model QLTC.Models.TaiKhoanTempList


@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Chỉnh sửa tài khoản</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/main.css" />

    <style>
        #element3 {
            display: inline-block;
            margin-right: 10px;
            width: 50px;
        }

        #element4 {
            display: inline-block;
            width: 170px;
        }
    </style>
</head>

<body class="no-sidebar is-preload">
    <div id="page-wrapper">

        <!-- Header -->
        <section id="header" class="wrapper">

            <!-- Logo -->
            <div id="logo">
                <h1><a href="#">THÔNG TIN TÀI KHOẢN</a></h1>
                <p>Quý khách có thể cập nhật thông tin theo ý muốn</p>
            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li><a href="/Home/Main">Trang chủ</a></li>
                    <li><a href="/SetUp/SetUp">Đặt tiệc</a></li>
                    <li><a href="/TaiKhoan/TaiKhoan">Thông tin tài khoản</a></li>
                    <li><a href="/LichSu/LichSu">Lịch sử</a></li>
                </ul>
            </nav>
        </section>

        <!-- Main -->
        <div id="main" class="wrapper style2">
            <div class="container">
                <!-- Content -->
                <div id="content">
                    <article class="box post">
                        <div>
                            <!-- Contact Form -->
                            <section>
                                <form method="post" action="/TaiKhoan/TaiKhoan">
                                    <div align="center">
                                        <div>
                                            <label style="margin-left: 10px" id="element1" class="form-check-label" for="defaultCheck1">
                                                <font style="margin-right: -50px" size="5">SĐT</font>
                                            </label>
                                            <input type="text" name="sdt" id="element2" disabled value="@Model.tai_khoan_T.SDT" />
                                        </div>
                                        <br>

                                        <div>
                                            <label style="margin-left: 10px" id="element1" class="form-check-label" for="defaultCheck1">
                                                <font style="margin-right: -5px" size="5">Tên cô dâu</font>
                                            </label>
                                            <input type="text" name="tencodau" id="element2" value="@Model.tai_khoan_T.TenCoDau" />
                                        </div>
                                        <br>

                                        <div>
                                            <label style="margin-left: 10px" id="element1" class="form-check-label" for="defaultCheck1">
                                                <font style="margin-right: -30px" size="5">Tên chú rể</font>
                                            </label>
                                            <input type="text" name="tenchure" id="element2" value="@Model.tai_khoan_T.TenChuRe" />
                                        </div>
                                        <br>

                                        <div>
                                            <label style="margin-left: 10px" class="form-check-label" for="defaultCheck1">
                                                <font style="margin-right: -30px; color: red" size="5">Đổi mật khẩu</font>
                                            </label>
                                        </div>
                                        <br>


                                        <div>
                                            <label id="element1" class="form-check-label" for="defaultCheck1">
                                                <font size="5">Password Cũ</font>
                                            </label>
                                            <input placeholder="Nhập lại mật khẩu cũ" type="password" maxlength="10" id="element2" name="matkhaucu" />
                                        </div>
                                        <br>

                                        <div>
                                            <label id="element1" class="form-check-label" for="defaultCheck1">
                                                <font size="5">Password Mới</font>
                                            </label>
                                            <input placeholder="Nhập mật khẩu mới" type="password" maxlength="10" id="element2" name="matkhaumoi" />
                                        </div>
                                        <br>


                                        <div style="margin-top: 50px" class="col-12">
                                            <ul class="actions">
                                                <li><input type="submit" class="style1" value="Cập nhật" /></li>
                                            </ul>
                                        </div>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </article>
                </div>

            </div>
        </div>

        @if (ViewBag.ErrorPassword != null)
        {
            <script>
                alert("@ViewBag.ErrorPassword");
            </script>
        }

        @if (ViewBag.ApplyChange != null)
        {
            <script>
                alert("@ViewBag.ApplyChange");
            </script>
        }


        <!-- Footer -->
        <section id="footer" class="wrapper">
            <div class="title">Liên hệ</div>
            <div class="container">
                <header class="style1">
                    <h2>Liên hệ ngay với chúng tôi để được tư vấn thêm</h2>
                    <p>
                        Nếu có gì không hài lòng mong quý khách phản hồi theo thông tin phía dưới.<br />
                        Xin lỗi nếu làm quý khách phiền lòng.
                    </p>
                </header>
                <div class="row">
                    <div class="col-6 col-12-medium">

                        <!-- Contact Form -->
                        <section>
                            <form method="post" action="#">
                                <div class="row gtr-50">
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="name" id="contact-name" placeholder="Name" />
                                    </div>
                                    <div class="col-6 col-12-small">
                                        <input type="text" name="email" id="contact-email" placeholder="Email" />
                                    </div>
                                    <div class="col-12">
                                        <textarea name="message" id="contact-message" placeholder="Message" rows="4"></textarea>
                                    </div>
                                    <div class="col-12">
                                        <ul class="actions">
                                            <li><input type="submit" class="style1" value="Send" /></li>
                                            <li><input type="reset" class="style2" value="Reset" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </section>

                    </div>
                    <div class="col-6 col-12-medium">

                        <!-- Contact -->
                        <section class="feature-list small">
                            <div class="row">
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-home">Địa chỉ</h3>
                                        <p>
                                            56 Sư Vạn hạnh<br />
                                            Quận 10, TP.HCM<br />
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-comment">Cộng đồng</h3>
                                        <p>
                                            <a href="#">facebook.com/goldenflower</a><br />
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-envelope">Email</h3>
                                        <p>
                                            <a href="#">baohua01234@gmail.com</a>
                                        </p>
                                    </section>
                                </div>
                                <div class="col-6 col-12-small">
                                    <section>
                                        <h3 class="icon fa-phone">Điện thoại</h3>
                                        <p>
                                            0908545151544
                                        </p>
                                    </section>
                                </div>
                            </div>
                        </section>

                    </div>
                </div>
                <div id="copyright">
                    <ul>
                        <li>&copy; Golden Flower</li>
                        <li>Design: <a href="">Nhom lap trinh web</a></li>
                    </ul>
                </div>
            </div>
        </section>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.dropotron.min.js"></script>
    <script src="~/Scripts/browser.min.js"></script>
    <script src="~/Scripts/breakpoints.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>

</body>
</html>
